<%= turbo_frame_tag "edit" do %>
  <div class="row align-items-center justify-content-center">
    <div class="col-3 col-md-1"><%= image_tag @user.avatar.url, class: 'rounded-circle float-end float-md-none ', size: '75x75' %></div>
    <div class="col-6">
      <div class="col-12"><%= @user.name %></div>
      <div class="col-12"><%= @user.email %></div>
      <div class="col-12">コメント高評価数<%= @user_effectives_count %></div>
      <div class="col-12"><%= link_to t('defaults.edit_profile'), edit_profile_path, class: 'btn btn-primary float-right' %></div>
    </div>
  </div>
<% end %>