<div class="col-sm-12 col-lg-4 mb-3">
  <div id="post-id-<%= post.id %>">
    <div class="card">
      <%= video_tag post.video_url, autoplay: true, muted: true, class: 'card-img-top',size: '300x200', controls: true unless post.video.blank? %>
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to post.body, post_path(post) %>
        </h4>
          <%= render 'posts/crud_menus', post: post if current_user.own?(post)%>
          <ul class="list-inline">
            <li class="list-inline-item">
              <%= icon 'far', 'user' %>
              <%= post.user.name %>
            </li>
            <li class="list-inline-item">
              <%= icon 'far', 'calendar' %>
              <%= l post.created_at, format: :long %>
            </li>
          </ul>
          <p class="card-text"><%= post.body %></p>
          
      </div>
    </div>
  </div>
</div>