<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <!-- 投稿一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <%# 無限スクロール %>
          <div id="posts">
            <%= turbo_frame_tag "posts-page-#{@posts.current_page}" do %>
              <%= render @posts %>
              <%= turbo_frame_tag "posts-page-#{@posts.next_page}", loading: :lazy, src: path_to_next_page(@posts) %>
            <% end %>  
          </div>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
