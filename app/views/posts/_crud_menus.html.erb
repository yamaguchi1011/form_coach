<ul class='crud-menu-btn list-inline float-right'>
  <li class="list-inline-item">
    <%= link_to edit_post_path(post), id: "button-edit-#{post.id}" do %>
      <%= icon 'fa', 'pen' %>
    <% end %>
  </li>
  <li class="list-inline-item">
    <%= button_to post_path(post), id: "button-delete-#{post.id}", method: :delete ,form: {data: { turbo_confirm: '削除してもよろしいですか'}} do %>
      <%= icon 'fas', 'trash' %>
      
    <% end %>
  </li>
</ul>